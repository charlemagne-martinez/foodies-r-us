{{>header}}
{{>navbar}}
<main>
    <h1>Locations</h1>

    <div id="browse">
        <table id="locations-table" border="1" cellpadding="5">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Country</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.locationID}}</td>
                    <td>{{this.city}}</td>
                    <td>{{this.state}}</td>
                    <td>{{this.country}}</td>
                    <td><button onclick="deleteLocation({{this.locationID}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <p>&nbsp;</p>
    </div> <!-- browse -->
    <p>&nbsp;</p>

    <div id="insert" style="display: block">
        <form id="add-location-form" method="POST" action="/add-location-form">
            <legend><strong>Add Location</strong></legend>
            <fieldset class="fields">
                <label> City </label> <input type="text" name="city" id="input-city">
                <label> State </label> <input type="text" name="state" id="input-state">
                <label> Country </label> <input type="text" name="country" id="input-country">
            </fieldset>

            <input class="btn" type="submit" id="addLocation" value="Add a Location">
            <input class="btn" type="button" value="Cancel">
        </form> <!--add new location-->
    </div><!-- insert -->

    <p>&nbsp;</p>

    <div id="update" style="display: block">
        <form id="update-location-form" method="POST" action="/update-location-form">
            <legend><strong>Update Location</strong></legend>
            <fieldset class="fields">
                <label>Location</label>
                <select id="select-update-location">
                    <option>Select Location</option>
                    {{#each data}}
                    <option data-city="{{this.city}}" data-state="{{this.state}}" data-country="{{this.country}}" data-locationID="{{this.locationID}}">
                        {{#if this.state}}
                            {{this.city}}, {{this.state}}, {{this.country}}
                        {{else}}
                            {{this.city}}, {{this.country}}
                        {{/if}}
                    </option>
                    {{/each}}
                </select>
                <label> City </label> <input type="text" name="city" id="update-city">
                <label> State </label> <input type="text"  name="state" id="update-state">
                <label> Country </label> <input type="text" name="country" id="update-country">
                <input type="hidden" name="locationID" id="update-locationID">
            </fieldset>

            <input class="btn" type="submit" id="UpdateSaveLocation" value="Save Update Location">
            <input class="btn" type="button" value="Cancel" >
        </form> 
    </div><!-- update -->

        <script>
        let selectElement = document.querySelector('#select-update-location');

        selectElement.addEventListener('change', function(e) {
            let selectedOption = selectElement.options[selectElement.selectedIndex];

            document.getElementById("update-locationID").value = selectedOption.getAttribute('data-locationID')
            document.getElementById("update-city").value = selectedOption.getAttribute('data-city')
            document.getElementById("update-state").value = selectedOption.getAttribute('data-state')
            document.getElementById("update-country").value = selectedOption.getAttribute('data-country')

        });
  </script>

</main>