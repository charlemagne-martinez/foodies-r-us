{{>header}}
{{>navbar}}
<main>
    <h1>Restaurants</h1>

    <div id="browse">
        <table id="restaurant-table" border="1" cellpadding="5">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Location</th>
                    <th>Restaurant Chain</th>
                    <th>Restaurant Name</th>
                    <th>Description</th>
                    <th>Average Rating</th>
                    <th>Average Price</th>
                    <th>Popular Order</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.restaurantID}}</td>
                    <td>{{this.locationID}}</td>
                    <td>{{this.restaurantChainID}}</td>
                    <td>{{this.restaurantName}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.avgRating}}</td>
                    <td>{{this.avgPrice}}</td>
                    <td>{{this.popularOrder}}</td>
                    <td><button onclick="deleteRestaurant({{this.restaurantID}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <p>&nbsp;</p>
    </div> <!-- browse -->
    <p>&nbsp;</p>

    <div id="insert" style="display: block">
        <form id="add-restaurant-form" method="POST" action="/add-restaurant-form">
            <legend><strong>Add Restaurant</strong></legend>
            <fieldset class="fields">
            <label> Location </label> 
                <select name="locations">
                    <option>Select Location</option>
                    {{#each data}}
                    <option>{{this.location}}</option>
                    {{/each}}
                </select>

            <label> Restaurant Chain</label> 
                <select name="chain">
                    <option>Select a Restaurant Chain</option>
                    {{#each data}}
                    <option> {{this.name}} </option>
                    {{/each}}
                </select>

            <label> Restaurant Name </label> <input type="text" name="restaurantName">
            <label> Description </label> <input type="text" name="description">
            <label> Average Rating </label> 
                <select>
                    <option>Select Rating</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>

                </select>
            <input type="hidden" name="avgRating">
            <label> Average Price </label>
                <select>
                    <option>Select Price Icon</option>
                    <option>$</option>
                    <option>$$</option>
                    <option>$$$</option>
                    <option>$$$$</option>
                </select> 
            <input type="hidden" name="avgPrice">
            <label> Popular Order </label> <input type="text" name="popularOrder">

            </fieldset>
            <input class="btn" type="submit" id="addRestaurant" value="Add a Restaurant">
            <input class="btn" type="button" value="Cancel">
        </form> <!--add new restaurant-->
    </div><!-- insert -->

    <p>&nbsp;</p>
    <div id="update" style="display: block">
        <form id="updateRestaurant">
            <legend><strong>Update Restaurant</strong></legend>
            <fieldset class="fields">
            <label> Location </label> 
                <select name="locations" id="select-update-location">
                    <option>Select Location</option>
                    {{#each data}}
                    <option data-location="{{this.location}}" data-locationID="{{this.locationID}}">{{this.location}}</option>
                    {{/each}}
                </select>

            <label> Restaurant Chain</label> 
                <select name="chain" id="select-update-chain">
                    <option>Select a Restaurant Chain</option>
                    {{#each data}}
                    <option data-name="{{this.name}}" data-chainID="{{this.restaurantChainID}}"> {{this.name}} </option>
                    {{/each}}
                </select>

            <label> Restaurant Name </label> <input type="text" name="restaurantName" id="update-restaurantName">
            <label> Description </label> <input type="text" name="description" id="udpate-description" >
            <label> Average Rating </label> <input type="text" name="avgRating" id="update-avgRating" >
            <label> Average Price </label> <input type="text" name="avgPrice" id="update-avgPrice" >
            <label> Popular Order </label> <input type="text" name="popularOrder" id="popularOrder" >
            <input type="hidden" name="location" id="update-location">
            <input type="hidden" name="name" id="update-name">

            </fieldset>
            <input class="btn" type="submit" id="UpdateSaveRestaurant" value="Save Update Restaurant">
            <input class="btn" type="button" value="Cancel" >
        </form> 
    </div><!-- update -->

    <script>
        let chain = document.querySelector('#select-update-chain');
        let location = document.querySelector('#select-update-location');

        chain.addEventListener('change', function(e) {
            let selectedOption = chain.options[chain.selectedIndex];

            document.getElementById("update-chain").value = selectedOption.getAttribute('data-chainID')
        });

        location.addEventListener('change', function(e) {
            let selectedOption = location.options[location.selectedIndex];

            document.getElementById("update-location").value = selectedOption.getAttribute('data-locationID')
        });
    </script>

</main>