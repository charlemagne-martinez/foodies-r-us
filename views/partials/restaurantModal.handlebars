<div id="modal-backdrop-restaurant" class="hidden"></div>
<div id="update-modal-restaurant" class="hidden">
    <div class="modal-dialog">

        <div class="modal-header">
            <h3>Edit User</h3>
            <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
        </div>
        <form id="update-restaurant-form" method="POST" action="/update-restaurant-form">
            <div class="modal-body">
                <input type="hidden" name="restaurantID" id="update-restaurantID">
                <input type="hidden" name="location" id="update-location">
                <input type="hidden" name="name" id="update-name">

                <div class="post-input-element">
                    <label> Location </label> 
                    <select name="locations" id="select-update-location">
                        {{#each data}}
                        <option data-locationID="{{this.locationID}}">{{this.location}}</option>
                        {{/each}}
                    </select>
                </div>       

                <div class="post-input-element">
                    <label> Chain </label>
                    <select name="chain" id="select-update-chain">
                        {{#each data}}
                        <option data-chainID="{{this.restaurantChainID}}"> {{this.name}} </option>
                        {{/each}}
                    </select>
                </div>

                <div class="post-input-element">
                    <label> Restaurant Name </label> 
                    <input type="text" name="restaurantName" id="update-restaurantName">
                </div>

                <div class="post-input-element">
                    <label> Description </label> 
                    <input type="text" name="description" id="udpate-description">
                </div>

                <div class="post-input-element">
                    <label> Average Rating </label> 
                    <input type="text" name="avgRating" id="update-avgRating">
                </div>

                <div class="post-input-element">
                    <label> Average Price </label> 
                    <input type="text" name="avgPrice" id="update-avgPrice">
                </div>

                <div class="post-input-element">
                    <label> Popular Order </label> 
                    <input type="text" name="popularOrder" id="popularOrder">
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
                <button type="submit" id="modal-accept" class="action-button">Confirm</button>
            </div>
        </form>

    </div>
</div>